<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480.0" prefWidth="720.0"
            style="-fx-background-color: #FFFFFF;"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.ShowUserController">
   <children>
      <Button fx:id="btnRetour" layoutX="10.0" layoutY="8.0" mnemonicParsing="false" onAction="#retourAccueil" prefHeight="32.0" prefWidth="90.0" style="-fx-background-color: transparent; -fx-cursor: hand; -fx-border-color: #228B22; -fx-border-radius: 5; -fx-text-fill: #228B22;" text="← Retour" />
      <Label layoutX="110.0" layoutY="12.0" text="Gestion des utilisateurs" textFill="#228B22">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="fieldRechercheUser" layoutX="20.0" layoutY="42.0" prefHeight="32.0" prefWidth="250.0" promptText="Rechercher par nom, email, rôle..." />
      <Button fx:id="btnRafraichir" layoutX="280.0" layoutY="42.0" mnemonicParsing="false" onAction="#rafraichir" text="Rafraîchir" />
      <TableView fx:id="tableViewUserRegister" layoutX="20.0" layoutY="82.0" prefHeight="318.0" prefWidth="680.0" />
      <Label fx:id="labelAucunUser" layoutX="20.0" layoutY="200.0" text="Aucun utilisateur. Cliquez sur « Importer utilisateur démo » pour ajouter des données." textFill="#999" visible="false" wrapText="true">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Button fx:id="btnExportPdf" layoutX="20.0" layoutY="415.0" mnemonicParsing="false" onAction="#exportPdf" text="Exporter la sélection en PDF">
         <tooltip>
            <Tooltip text="Sélectionnez un ou plusieurs utilisateurs puis cliquez pour exporter" />
         </tooltip>
      </Button>
      <Button fx:id="btnImportDemo" layoutX="160.0" layoutY="415.0" mnemonicParsing="false" onAction="#importDemoUser" text="Importer utilisateur démo (API)" />
      <Button fx:id="logoutshow" layoutX="620.0" layoutY="10.0" mnemonicParsing="false" onAction="#logoutshow" text="Déconnexion" />
   </children>
</AnchorPane>
