<AnchorPane prefHeight="450.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.StatsDashboardController">
   <children>
      <Button fx:id="btnRetour" layoutX="24.0" layoutY="14.0" mnemonicParsing="false" onAction="#retour" prefHeight="28.0" prefWidth="85.0" style="-fx-background-color: transparent; -fx-cursor: hand; -fx-border-color: #228B22; -fx-border-radius: 5; -fx-text-fill: #228B22;" text="← Retour" />
      <Label layoutX="120.0" layoutY="20.0" text="Tableau de bord - Statistiques" textFill="#228B22">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <Label fx:id="labelDerniereMaj" layoutX="24.0" layoutY="48.0" text="Dernière mise à jour : --" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
      <GridPane layoutX="20.0" layoutY="70.0" prefHeight="200.0" prefWidth="660.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <AnchorPane style="-fx-background-color: #E8F5E9; -fx-background-radius: 10;" GridPane.columnIndex="0" GridPane.rowIndex="0">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label fx:id="labelTotalUsers" layoutX="14.0" layoutY="14.0" text="0" textFill="#228B22" wrapText="true">
                     <font>
                        <Font name="System Bold" size="36.0" />
                     </font>
                  </Label>
                  <Label layoutX="14.0" layoutY="65.0" text="Utilisateurs" textFill="#1B5E20">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
            <AnchorPane style="-fx-background-color: #E3F2FD; -fx-background-radius: 10;" GridPane.columnIndex="1" GridPane.rowIndex="0">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label fx:id="labelTotalTaches" layoutX="14.0" layoutY="14.0" text="0" textFill="#1976D2" wrapText="true">
                     <font>
                        <Font name="System Bold" size="36.0" />
                     </font>
                  </Label>
                  <Label layoutX="14.0" layoutY="65.0" text="Tâches" textFill="#0D47A1">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
            <AnchorPane style="-fx-background-color: #FFF3E0; -fx-background-radius: 10;" GridPane.columnIndex="0" GridPane.rowIndex="1">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label fx:id="labelTachesEnCours" layoutX="14.0" layoutY="14.0" text="0" textFill="#E65100" wrapText="true">
                     <font>
                        <Font name="System Bold" size="36.0" />
                     </font>
                  </Label>
                  <Label layoutX="14.0" layoutY="65.0" text="Tâches en cours" textFill="#BF360C">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
            <AnchorPane style="-fx-background-color: #E8EAF6; -fx-background-radius: 10;" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <children>
                  <Label fx:id="labelTachesTerminees" layoutX="14.0" layoutY="14.0" text="0" textFill="#3F51B5" wrapText="true">
                     <font>
                        <Font name="System Bold" size="36.0" />
                     </font>
                  </Label>
                  <Label layoutX="14.0" layoutY="65.0" text="Tâches terminées" textFill="#1A237E">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
         </children>
      </GridPane>
      <!-- Graphique: pourcentage de tâches par type d'utilisateur (rôle) -->
      <PieChart fx:id="pieTachesParRole"
                layoutX="20.0" layoutY="290.0"
                prefHeight="150.0" prefWidth="660.0"
                labelsVisible="true"
                legendVisible="true" />

      <Button fx:id="btnRetour" layoutX="20.0" layoutY="370.0" mnemonicParsing="false" onAction="#retour" styleClass="button-style" stylesheets="@css/style.css" text="Retour" textFill="WHITE" />
   </children>
</AnchorPane>
