<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<StackPane prefHeight="520.0" prefWidth="500.0" styleClass="app-root form-root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlles.DetailsController">
    <VBox maxWidth="460.0" styleClass="detail-card" spacing="20.0">
        <!-- Header Section -->
        <VBox spacing="8.0" styleClass="detail-header">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <SVGPath content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                         styleClass="detail-icon" />
                <Label text="Détails de la culture" styleClass="detail-title" />
            </HBox>
            <Separator styleClass="header-separator" />
        </VBox>

        <!-- Form Fields Section -->
        <VBox spacing="18.0" styleClass="form-section">
            <!-- Nom de la culture -->
            <VBox spacing="8.0" styleClass="field-group">
                <HBox alignment="CENTER_LEFT" spacing="6.0">
                    <SVGPath content="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
                             styleClass="field-icon" />
                    <Label text="Nom de la culture" styleClass="form-label" />
                </HBox>
                <TextField fx:id="resNom" editable="false" prefHeight="42.0"
                           styleClass="form-field readonly-field"
                           promptText="Nom de la culture">
                    <padding>
                        <Insets left="14.0" right="14.0" />
                    </padding>
                </TextField>
            </VBox>

            <!-- Etat de croissance -->
            <VBox spacing="8.0" styleClass="field-group">
                <HBox alignment="CENTER_LEFT" spacing="6.0">
                    <SVGPath content="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.9 2 2 2zm6-6v-5c0-3.07-1.63-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.64 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2zm-2 1H8v-6c0-2.48 1.51-4.5 4-4.5s4 2.02 4 4.5v6z"
                             styleClass="field-icon" />
                    <Label text="État de croissance" styleClass="form-label" />
                </HBox>
                <TextField fx:id="resEtat" editable="false" prefHeight="42.0"
                           styleClass="form-field readonly-field"
                           promptText="État actuel">
                    <padding>
                        <Insets left="14.0" right="14.0" />
                    </padding>
                </TextField>
            </VBox>

            <!-- Rendement prevu -->
            <VBox spacing="8.0" styleClass="field-group">
                <HBox alignment="CENTER_LEFT" spacing="6.0">
                    <SVGPath content="M16 6l2.29 2.29-4.88 4.88-4-4L2 16.59 3.41 18l6-6 4 4 6.3-6.29L22 12V6h-6z"
                             styleClass="field-icon" />
                    <Label text="Rendement prévu (kg)" styleClass="form-label" />
                </HBox>
                <TextField fx:id="resRendement" editable="false" prefHeight="42.0"
                           styleClass="form-field readonly-field"
                           promptText="Rendement estimé">
                    <padding>
                        <Insets left="14.0" right="14.0" />
                    </padding>
                </TextField>
            </VBox>
        </VBox>

        <!-- Footer Info -->
        <Region VBox.vgrow="ALWAYS" minHeight="10.0" />

        <HBox alignment="CENTER" spacing="8.0" styleClass="info-footer">
            <SVGPath content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"
                     styleClass="info-icon" />
            <Label text="Mode consultation uniquement" styleClass="muted-text" />
            <padding>
                <Insets top="8.0" bottom="4.0" />
            </padding>
        </HBox>

        <padding>
            <Insets top="24.0" bottom="24.0" left="24.0" right="24.0" />
        </padding>
    </VBox>
</StackPane>
