                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <StackPane style="-fx-background-color: rgba(34,197,94,0.15); -fx-background-radius: 8; -fx-min-width:40; -fx-min-height:40;">
                                <SVGPath content="M4 6h16v2H4V6zm2-4h12v2H6V2zm16 7v10c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V9c0-1.1.9-2 2-2h16c1.1 0 2 .9 2 2zm-2 0H4v10h16V9zM7 12h4v2H7v-2z"
                                         style="-fx-fill: #22c55e; -fx-scale-x:0.8; -fx-scale-y:0.8;"/>
