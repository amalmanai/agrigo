                          HBox.hgrow="ALWAYS" spacing="12">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <StackPane style="-fx-background-color: rgba(34,197,94,0.15); -fx-background-radius: 8; -fx-min-width:40; -fx-min-height:40;">
                                <SVGPath content="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
