<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlles.Page1Controller">
   <children>
      <Label layoutX="20.0" layoutY="20.0" text="Gestion des systèmes d'irrigation" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

      <Label layoutX="20.0" layoutY="70.0" text="Nom système:" />
      <TextField fx:id="tfNom" layoutX="160.0" layoutY="66.0" prefWidth="200.0" />

      <Label layoutX="20.0" layoutY="110.0" text="Mode (AUTO/MANUEL):" />
      <TextField fx:id="tfMode" layoutX="160.0" layoutY="106.0" prefWidth="200.0" />

      <Label layoutX="20.0" layoutY="150.0" text="Seuil humidité:" />
      <TextField fx:id="tfSeuil" layoutX="160.0" layoutY="146.0" prefWidth="200.0" />

      <Button fx:id="btnAjouter" layoutX="400.0" layoutY="66.0" mnemonicParsing="false" onAction="#handleAddSystem" text="Ajouter" />
      <Button fx:id="btnModifier" layoutX="400.0" layoutY="106.0" mnemonicParsing="false" onAction="#handleUpdateSystem" text="Modifier" />
      <Button fx:id="btnSupprimer" layoutX="400.0" layoutY="146.0" mnemonicParsing="false" onAction="#handleDeleteSystem" text="Supprimer" />
      <Button fx:id="btnHistorique" layoutX="520.0" layoutY="106.0" mnemonicParsing="false" onAction="#handleShowHistory" text="Voir historique" />

      <TableView fx:id="tvSystemes" layoutX="20.0" layoutY="200.0" prefHeight="260.0" prefWidth="760.0">
         <columns>
            <TableColumn fx:id="colId" prefWidth="60.0" text="ID" />
            <TableColumn fx:id="colNom" prefWidth="220.0" text="Nom" />
            <TableColumn fx:id="colMode" prefWidth="120.0" text="Mode" />
            <TableColumn fx:id="colSeuil" prefWidth="120.0" text="Seuil humidité" />
            <TableColumn fx:id="colStatut" prefWidth="120.0" text="Statut" />
         </columns>
      </TableView>
   </children>
</AnchorPane>
