<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlles.DetailsController">
   <children>
      <Label fx:id="lblSysteme" layoutX="20.0" layoutY="20.0" text="Historique du système" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

      <TableView fx:id="tvHistorique" layoutX="20.0" layoutY="70.0" prefHeight="360.0" prefWidth="760.0">
         <columns>
            <TableColumn fx:id="colDate" prefWidth="180.0" text="Date irrigation" />
            <TableColumn fx:id="colDuree" prefWidth="100.0" text="Durée (min)" />
            <TableColumn fx:id="colVolume" prefWidth="120.0" text="Volume eau" />
            <TableColumn fx:id="colHumidite" prefWidth="120.0" text="Humidité avant" />
            <TableColumn fx:id="colType" prefWidth="120.0" text="Type" />
         </columns>
      </TableView>

      <Button layoutX="20.0" layoutY="450.0" mnemonicParsing="false" text="Retour" onAction="#handleBack" />
   </children>
</AnchorPane>
